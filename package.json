{
  "name": "electricity-monitor",
  "version": "1.0.0",
  "description": "家庭用电监控与可视化系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm ci --prefer-offline --no-audit && npm run build",
    "prebuild": "echo 'Building frontend...'",
    "postbuild": "echo 'Build completed!'",
    "diagnose": "node diagnose.js",
    "crawler:local": "node scripts/run-local-crawler.js",
    "oneclick": "node scripts/oneclick.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsdom": "^22.1.0",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "localtunnel": "^2.0.2",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
